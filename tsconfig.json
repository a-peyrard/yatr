{
  "compilerOptions": {
    "module": "node16",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true, // need this, otherwise have to use commonjs
    "strict": true,
    "strictPropertyInitialization": false, // NestJS likes classes without constructors
    "forceConsistentCasingInFileNames": false,
    "noErrorTruncation": true,
  }
}
